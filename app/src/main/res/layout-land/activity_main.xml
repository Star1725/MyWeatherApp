<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sun_svg"
        tools:srcCompat="@drawable/ic_sun_svg" />

    <TextView
        android:id="@+id/tvNameCites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="left"
        android:text="@string/moscow"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/tvTemperature"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/unit_C"
        android:textAlignment="textEnd"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameCites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameCites" />

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:textAlignment="textEnd"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameCites"
        app:layout_constraintEnd_toStartOf="@+id/tvUnits"
        app:layout_constraintTop_toTopOf="@+id/tvNameCites" />


</androidx.constraintlayout.widget.ConstraintLayout>